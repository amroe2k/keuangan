<BaseLayout title="Hubungan Keuangan | Konsultan Keuangan BUMDes & UMKM">
	<Navbar />
	<main>
		<Hero />
		
    <!-- Brief Transformation Statement Section -->
    <section class="py-12 bg-white border-y border-slate-100 italic font-medium text-slate-500 text-center">
